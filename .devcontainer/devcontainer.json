{
    "name": "Go Dev Container Template",
    "workspaceFolder": "/workspaces/dev-container-templates",
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/dev-container-templates,type=bind,consistency=cached",
    "mounts": [
        "source=go-build-cache,target=/home/vscode/.cache/go-build,type=volume"
    ],
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {}
    },
    "forwardPorts": [
        8080
    ],
    "dockerFile": "Dockerfile",
    "postCreateCommand": ".devcontainer/setup.sh",
    "remoteUser": "vscode",
    "customizations": {
        "vscode": {
            "extensions": [
                "golang.Go",
                "golangci.golangci-lint"
            ],
            "settings": {
                "files.insertFinalNewline": true,
                "editor.formatOnSave": true,
                "files.trimTrailingWhitespace": true,
                "go.toolsManagement.checkForUpdates": "local",
                "go.lintTool": "golangci-lint",
                "go.lintFlags": [
                    "--fast"
                ],
                "go.formatTool": "goimports",
                "[go]": {
                    "editor.defaultFormatter": "golang.go",
                    "editor.codeActionsOnSave": {
                        "source.organizeImports": true
                    }
                },
                "[go.mod]": {
                    "editor.defaultFormatter": "golang.go"
                },
                "workbench.colorCustomizations": {
                    "titleBar.activeBackground": "#00ADD8",
                    "titleBar.activeForeground": "#ffffff",
                    "statusBar.background": "#00A29C",
                    "statusBar.foreground": "#ffffff",
                    "statusBar.debuggingBackground": "#FDDD00",
                    "statusBar.debuggingForeground": "#000000"
                }
            }
        }
    }
}
